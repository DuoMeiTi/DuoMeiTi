		</action>
		
		<action name="training_*" class="admin.TrainingAction" method="{1}">
			<result name="success" type="json"></result>
		</action> 
		
		

		<!-- 获取学生信息 -->
		<action name="get_student_information" class="admin.StudentManageAction" method="getStudentInformation">
           <result name="success" type="json">
            	<param name="includeProperties">fullName,sex,studentId,college,phoneNumber,isUpgradePrivilege,bankCard,idCard</param>           
           </result>           
        </action>
		
        
        <!-- 删除学生信息 -->
		<action name="student_manage_delete" class="admin.StudentManageAction" method="studentInformationDelete">
			<result name="success" type="json">
            	<param name="includeProperties">fullName,studentId,college,phoneNumber</param>           
           </result>       
        </action>
        
        <!-- 保存学生信息 -->
		<action name="student_information_save" class="admin.StudentManageAction" method="saveStudentInformation">
            <result name="success" type="json">
            <param name="includeProperties">fullName,studentId,college,phoneNumber</param>
			</result>        
        </action>
        
        <!-- 检索学生信息 -->
        <action name="student_information_search" class="admin.StudentManageAction" method="searchStudentInformation">
            <result name="success" type="json">
            <param name="includeProperties">isEmpty,student_profile_id,fullName,studentId,sex,college,phoneNumber,isUpgradePrivilege,bankCard,idCard,score</param>
			</result>        
        </action>
        
        <!-- 学生值班管理 -->
        <action name="duty_manage" class="admin.StudentManageAction" method="dutyManager">
        	<result>/jsp/admin/student_manage/dutyManage.jsp</result>
        </action>
        
        <!-- 获取值班表 -->
        <action name="getDutyTable" class="admin.StudentManageAction" method="getDutyTable">
        	<result type="json">
        		<param name="includeProperties">
        			dutySchedule\[\d+\]\.studentId,
        			dutySchedule\[\d+\]\.studentName,
        			dutySchedule\[\d+\]\.time,
        			teachBuildingId,
        		</param>
        	</result>
        </action>
        
        <!-- 改变开关状态 -->
        <action name="switchStatuChange" class="admin.StudentManageAction" method="switchStatuChange">
        	<result type="json">
        		<param name="includeProperties">log</param>
        	</result>
        </action>
        
        <!-- 删除选班 -->
        <action name="deleteDuty" class="admin.StudentManageAction" method="deleteDuty">
        	<result type="json">
        		<param name="includeProperties">log</param>
        	</result>
        </action>
       	<!-- 搜索学生 -->
       	<action name="searchStudent" class="admin.StudentManageAction" method="searchStudent">
       		<result type="json">
       			<param name="includeProperties">
       				searchResult\[\d+\]\.id,
       				searchResult\[\d+\]\.studentName,
       				searchResult\[\d+\]\.studentId,
       			</param>
       		</result>
       	</action>
       	<!-- 添加值班 -->
       	<action name="dutyAdd" class="admin.StudentManageAction" method="dutyAdd">
       		<result type="json">
       			<param name="includeProperties">
       				log
       			</param>
       		</result>
       	</action>
       
        
	</package>  
