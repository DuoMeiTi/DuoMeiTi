<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>


    <package name="student" namespace="/student" extends="Default">    	
    	
    	<action name="">
    		<result>/jsp/student/base.jsp</result>
    	</action>
    	<action name="classroom_manage" class="student.ClassroomManageAction" method="classroomList">
			<result>
			/jsp/student/classroom_manage.jsp
			</result>
		</action>
		<action name="classroom_detail" class="student.ClassroomDetailAction">
			<result>
				<param name="location">/jsp/student/classroom_detail.jsp</param>
				<!-- <param name="build_id">${classroom_id}</param>
				<param name="build_name">${classroom_num}</param> -->
				<param name="classroom_id">${classroom_id}</param>
				<param name="build_id">${build_id}</param>
			</result>
		</action>
    </package>
    
    <package name="student_classroom_json" namespace="/student/classroom_json" extends="Default">
		<action name="classroom_search" class="student.ClassroomManageAction" method="classroom_search">
			<result type="json">
				<!-- <param name="root">classrooms</param> -->
				<!-- <param name="includeProperties">classroominfo_html, status</param> -->
				<param name="includeProperties">
					status, classroominfo_html, 
					classrooms\[\d+\]\.id, classrooms\[\d+\]\.classroom_num, classrooms\[\d+\]\.capacity, classrooms\[\d+\]\.principal_name, classrooms\[\d+\]\.principal_stuId, classrooms\[\d+\]\.repertorys
				</param>
			</result>
		</action>
		<action name="checkrecord_save" class="student.CheckRecordAction" method="checkrecordsave">
			<result type="json">
				<param name="includeProperties">savestatus</param>
			</result>
		</action>
		<action name="repairrecord_save" class="student.RepairRecordAction" method="repairrecordsave">
			<result type="json">
				<param name="includeProperties">savestatus</param>
			</result>
		</action>
	</package>


</struts>
